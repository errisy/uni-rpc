{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./bin",
        "sourceMap": false,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "moduleResolution": "Classic",
        "importHelpers": true,
        "target": "ESNext",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "ESNext"
        ],
        "plugins": [
            { "transform": "./transformers/translate.ts",  "type": "raw" },
            // { "transform": "./transformers/ast.ts",  "type": "config", "transformProgram": true }
            { "transform": "./transformers/program-transform.ts", "type": "config", "transformProgram": true }
        ]
    },
    "include": [ "./*.ts"],
    "exclude": [ "./transformers/**", "./translated/**" ],
    "files": [
        "transformers/index.d.ts"
    ]
}