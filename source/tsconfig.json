{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./bin",
        "sourceMap": false,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "ES2021",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "ES2021"
        ],
        "plugins": [{ "transform": "./transformers/csharp.ts", "type": "raw" }]
    },
    "include": [ "./**/*"],
    "exclude": [ "./transformers/**" ]
}