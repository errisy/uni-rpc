{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./bin",
      "sourceMap": false,
      "declaration": false,
      "downlevelIteration": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "importHelpers": true,
      "target": "es2017",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2018"
      ]
    },
    "angularCompilerOptions": {
      "fullTemplateTypeCheck": true,
      "strictInjectionParameters": true
    }
  }
  